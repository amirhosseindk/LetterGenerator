<Shell
    x:Class="LetterGenerator.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LetterGenerator.MAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="Letter Generator">

	<ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
	<ShellContent Title="CreateLetter" ContentTemplate="{DataTemplate local:CreateLetterPage}" Route="CreateLetter" />
	<ShellContent Title="LettersListPage" ContentTemplate="{DataTemplate local:LettersListPage}" Route="LettersList" />
	<ShellContent Title="EditLetterPage" ContentTemplate="{DataTemplate local:EditLetterPage}" Route="EditLetter" />
</Shell>